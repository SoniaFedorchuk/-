<Window x:Class="GroupProject.WindowForMotivation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject"
        mc:Ignorable="d"
        Title="WindowForMotivation" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="2" Margin="20" TextWrapping="Wrap" Name="txt_qoute" Foreground="#FF403B3B" FontFamily="Bookman Old Style" FontSize="23"/>

        <Border BorderBrush="#FFBD8E7E" Grid.Column="1" Grid.Row="1"  BorderThickness="0,0,0,2" Margin="10">
            <TextBlock  Name="txt_author" FontStyle="Italic"/>
        </Border>

        <Button Click="Button_Click" Grid.ColumnSpan="2" Grid.Row="2" Margin="100,10" Content="Okay" Background="#FFBD8E7E" BorderBrush="#FFBD8E7E"></Button>
    </Grid>
</Window>
