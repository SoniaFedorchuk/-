<Window x:Class="GroupProject.SellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="SellWindow" Height="250" Width="350" ResizeMode="NoResize">
    <Grid>
        <Label FontWeight="Medium" FontSize="30" Margin="133,0,28,127">Sell</Label>
        <Label FontWeight="Medium" FontSize="16" Margin="25,71,70,118">Choose amount of books :</Label>
        <Slider x:Name="amount"
  Orientation="Horizontal"
  Minimum="0"
  Maximum="100"
  Style="{StaticResource MaterialDesignDiscreteSlider}"
  ToolTip="MaterialDesignDiscreteSlider" Margin="21,79,28,47" Foreground="#FFBD8E7E" />
        <Button Margin="191,172,10,10" Height="Auto" Background="#FFBD8E7E" BorderBrush="#FFBD8E7E" Content="Apply" FontSize="18" Opacity="100" Click="Button_Click"/>
    </Grid>
</Window>
