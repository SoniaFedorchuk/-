<Window x:Class="GroupProject.ShopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="ShopWindow" Height="540" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="403*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="252*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Background="#FF49484D">

        </StackPanel>


        <ListBox Grid.Column="1" Name="listBox" BorderBrush="#FFBD8E7E" BorderThickness="3" Margin="10,60,1,10" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <Label Content="Name of author: " Foreground="White" FontFamily="Microsoft Himalaya" />
                        <TextBlock MaxWidth="100" FontWeight="Bold" Text="Shevcneko" VerticalAlignment="Center"/>
                        <Label Content="Name of book: " Foreground="White" FontFamily="Microsoft Himalaya" />
                        <TextBlock MaxWidth="100" FontWeight="Bold" Text="Name of book" VerticalAlignment="Center"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <DockPanel Grid.Column="1" Margin="0,0,0,376" Grid.ColumnSpan="3">
            <materialDesign:ColorZone 
  Mode="PrimaryMid"
  Padding="16" Height="45" Background="#FF3E3D42" Width="739">
                <DockPanel>

                    <StackPanel
      Orientation="Horizontal"
      materialDesign:RippleAssist.IsCentered="True" Margin="0,-15,0,-27">
                        <materialDesign:ColorZone Height="30"
        Mode="Standard"
        Padding="8 4 8 4"
        CornerRadius="2"
        Panel.ZIndex="1"
        Margin="16,7,0,0"
        materialDesign:ShadowAssist.ShadowDepth="Depth1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
              Width="Auto" />
                                    <ColumnDefinition
              Width="*" />
                                    <ColumnDefinition
              Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Button
            Style="{DynamicResource MaterialDesignToolButton}" Margin="0,-3,0,-7">
                                    <materialDesign:PackIcon
              Kind="Magnify"
              Opacity=".56" />
                                </Button>
                                <TextBox
            Grid.Column="1"
            Margin="8 0 0 0"
            materialDesign:HintAssist.Hint="Build a search bar"
            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
            BorderThickness="0"
            MinWidth="200"
            VerticalAlignment="Center" />
                                <Button
            Style="{DynamicResource MaterialDesignToolButton}"
            Grid.Column="2"/>
                            </Grid>
                        </materialDesign:ColorZone>
                        <Button
        Style="{DynamicResource MaterialDesignToolForegroundButton}"
        Margin="8,0,0,11"
        Panel.ZIndex="0" Height="Auto" Width="39">
                            <materialDesign:PackIcon 
          Kind="Send" />
                        </Button>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>
        </DockPanel>

        <materialDesign:DialogHost BorderBrush="{DynamicResource MaterialDesignDivider}">
            <materialDesign:DialogHost.DialogContent>
                <Grid Width="300" Height="150" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="15">

                        <TextBlock Foreground="Gray" Width="200" Margin="15 5" TextWrapping="Wrap">
                           Lorem Ipsum dolor sit amet
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">

                        <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatButton}" Margin="4" VerticalAlignment="Center" Foreground="#FFBD8E7E">
                            Ok
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>
            <Grid>
                <StackPanel Width="150" HorizontalAlignment="Left" Background="#FF3E3D42">

                    <Button Style="{StaticResource MaterialDesignFlatButton}" Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}" Foreground="#FFBD8E7E" Height="43">
                        <StackPanel Orientation="Horizontal" Height="30">
                            <materialDesign:PackIcon Kind="About" Width="20" Height="20" VerticalAlignment="Center"/>
                            <TextBlock Text="About us" Margin="20 0" FontSize="15" VerticalAlignment="Center" Foreground="#FFFAFAFA"/>
                        </StackPanel>
                    </Button>
                    <Separator  ></Separator>
                    <Button Style="{StaticResource MaterialDesignFlatButton}"  Foreground="#FFBD8E7E" Height="48">
                        <StackPanel Orientation="Horizontal" Height="30" Width="124">
                            <materialDesign:PackIcon Kind="Chat" Width="20" Height="20" VerticalAlignment="Center"/>
                            <TextBlock Text="Chat" Margin="20 0" FontSize="15" VerticalAlignment="Center" Foreground="#FFFAFAFA"/>
                        </StackPanel>
                    </Button>
                    <Separator></Separator>
                </StackPanel>
            </Grid>
        </materialDesign:DialogHost>
        <StackPanel Grid.Column="3" Margin="20,60,20,218">
            <Expander
    HorizontalAlignment="Stretch"
    Header="Choose what you need">
                <StackPanel
      Orientation="Vertical"
      TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
      Margin="24,8,24,16">
                    <Button Margin="10" Content="Buy" Background="#FFBD8E7E" BorderBrush="#FFBD8E7E"></Button>
                    <TextBlock Text="or" HorizontalAlignment="Center" FontSize="16"></TextBlock>
                    <Button Margin="10" Content="Reserve"  Background="#FFBD8E7E" BorderBrush="#FFBD8E7E"/>
                    <materialDesign:PackIcon Kind="Love" Width="20" Height="20" HorizontalAlignment="Center" Foreground="#FF3E3D42" />
                </StackPanel>
            </Expander>
        </StackPanel>

        <Grid Grid.Column="3" Margin="0,296,0,0">
            <Popup x:Name="popup1" StaysOpen="False" Placement="Center" MaxWidth="180"
         AllowsTransparency="True"  >
                <TextBlock TextWrapping="Wrap" Width="170" FontWeight="Medium" Foreground="#FFBD8E7E"  Text="Click on te book,and then choose what you would like to do with the book in the list above" TextAlignment="Center" FontSize="14" />
                
            </Popup>
           
            <TextBlock Text="Use Hints" Margin="153,175,54,13" FontSize="16" FontWeight="Medium" Foreground="#FF3E3D42"></TextBlock>
            <ToggleButton x:Name="btnHints" VerticalAlignment="Bottom" HorizontalAlignment="Right"
  Style="{StaticResource MaterialDesignFlatToggleButton}"
  ToolTip="MaterialDesignFlatToggleButton" Width="47" Height="42" Margin="0,0,4,4" Checked="btnHints_Checked">
                <materialDesign:PackIcon 
    Kind="Paperclip"
    Height="36"
    Width="30" Foreground="#FF3E3D42" />
            </ToggleButton>
            
        </Grid>

    </Grid>
</Window>
