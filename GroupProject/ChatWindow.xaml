<Window x:Class="GroupProject.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="ChatWindow" Height="411.654" Width="731.203" Closing="Close_Connections">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="278*"/>
            <RowDefinition Height="56*"/>
        </Grid.RowDefinitions>

        <materialDesign:ColorZone Background="#FF3E3D42" Padding="16" Height="58" Grid.RowSpan="2">
            <TextBlock x:Name="user_text_block" FontWeight="Medium" FontSize="20" Foreground="White" Margin="68,-5,392,0" />
        </materialDesign:ColorZone>
        <Button Tag="for-lib" Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" ToolTip="MaterialDesignFloatingActionMiniLightButton" Margin="665,10,25,3" Height="Auto" Width="Auto" Background="#FFCAF1DA" BorderBrush="#FFCAF1DA" Click="Get_Online">
            <materialDesign:PackIcon  Kind="AccountTick" Height="24"  Width="24" />
        </Button>
        <Button Tag="for-lib" Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" ToolTip="MaterialDesignFloatingActionMiniLightButton" Margin="625,10,65,3" Height="Auto" Width="Auto" Background="#FFE89CB7" BorderBrush="#FFE89CB7" Click="Get_Offline">
            <materialDesign:PackIcon  Kind="AccountWarning" Height="24"  Width="24" />
        </Button>
        <Button Margin="10,8,649,7" Background="#FFBD8E7E" BorderBrush="#FFBD8E7E">
            <materialDesign:PackIcon Kind="KeyboardBackspace" Height="27" Width="32" />
        </Button>

        <StackPanel x:Name="chat_panel" VerticalAlignment="Bottom" Grid.Row="2">
        </StackPanel>

        <materialDesign:ColorZone Grid.Row="2"
  Mode="PrimaryMid"
  Padding="16" Background="#FFBD8E7E">
            <DockPanel Height="34">

                <StackPanel Orientation="Horizontal"  materialDesign:RippleAssist.IsCentered="True" Height="40">
                    <materialDesign:ColorZone
        Mode="Standard"
        CornerRadius="2"
        Panel.ZIndex="1"
        materialDesign:ShadowAssist.ShadowDepth="Depth1" Width="632" Height="34">

                        <TextBox x:Name="sended_message" Grid.Column="1" Opacity="100" Margin="8,0,0,10"  materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
            BorderThickness="0"
            MinWidth="200"
            VerticalAlignment="Center" Height="24" />

                    </materialDesign:ColorZone>
                    <Button
        Style="{DynamicResource MaterialDesignToolForegroundButton}"
        Margin="8,-13,0,4"
        Panel.ZIndex="0" Width="65" Height="Auto" Click="Send">
                        <materialDesign:PackIcon Foreground="White"
          Kind="Send" Height="25" Width="35" />
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>
    </Grid>
</Window>
